{
    "extends": "eslint:recommended",
  
    "env": {
      "es6": true,
      "node": true
    },
  
    "parserOptions": {
      "ecmaVersion" : 2018,
      "sourceType" : "module",
    },
  
    "rules": {
      "indent": ["error", 4],
      "quotes": [2, "single"],
      "semi": ["error", "always"],
      "camelcase": ["error", { "properties": "always" }],
      "comma-dangle" : 0
    }
  }
  